.slider
    height: 340px
    margin-bottom: 27px

    &__body
        list-style: none
        margin: 0
        padding: 0
        position: relative
        height: 330px
        overflow: hidden
        margin-bottom: 5px

    &__item
        width: 100%
        height: 330px
        position: absolute
        top: 0
        left: 0
        overflow: hidden

    &__link
        display: block
        position: absolute
        width: 10000px
        left: 50%
        margin-left: -(@width/ 2) px
        text-align: center

    &__image
        display: inline-block

    &__nav
        display: table
        width: 100%
        height: 5px
        table-layout: fixed
        margin: 0
        padding: 0
        list-style: none

    &__nav-btn
        display: table-cell
        height: 5px
        cursor: pointer

        span
            display: block
            margin: 0 2px
            hide-text()
            height: 2px
            background: blue
            position: relative
            top: 3px

        &:first-child
            span
                margin-left: 0

        &:last-child
            span
                margin-right: 0

        &_active
            
            span
                margin-top: 0
                height: 5px
                background: red
                top: 0

