.banner
    position: relative
    overflow: hidden
    width: 100%

    &__img
        position: absolute
        min-width: 100%
        min-height: 100%
        left: 0
        top: 0
        
    &_homepage,
    &_aside
        border: 1px solid red
        height: 318px

        &,
        & .banner__img
            border-radius: 2px

    &_home-wide
        height: 300px

    &_aside
        margin-bottom: 50px

