.appointment
    border: 1px solid blue
    border-radius: 2px
    height: 318px
    position: relative
    clearfix()
    
    &:before
        content: ''
        width: 35px
        height: 44px
        left: 25px
        top: -1px
        position: absolute
        background: url('../img/appointment-large-ico.png') no-repeat center red

    &__title
        margin: 0
        font-weight: normal
        font-family: 'Ubuntu'
        text-transform: uppercase
        font-size: 22px
        height: 29px
        line-height: @height
        padding: 9px 0 20px 73px

    &__label
        display: block
        clear: both
        padding: 0 24px
        height: 30px
        line-height: @height
        font-size: 15px
        font-family: 'Ubuntu Light'
        margin-bottom: 4px
        
    &__input
        overflow: hidden
        float: right
        width: (100 / (408 - 24*2)) * 220%
        
    &__date
        float: left
        width: (100 / 219) * 120%

    &__time
        float: right
        width: (100 / 219) * 80%

    &__footer
        float: right
        margin-top: 10px
        margin-right: 24px
        width: (100 / (408)) * 220%

        .btn
            width: 100%
            text-align: center

    &_aside
        margin-bottom: 50px