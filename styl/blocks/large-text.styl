.large-text
    &__pager
        width: 690px
        margin: 10px auto 100px
        position: relative
        overflow: hidden
        
        &:before
            content: ''
            position: absolute
            top: 0
            left: 50%
            bottom: 0
            width: 1px
            background: blue
            
        &-prev,
        &-next
            float: left
            width: 220px
            color: #7388a9
            font-size: 14px
            
        &-prev
            text-align: right

        &-next
            text-align: left
            float: right

    &__link
        display: block
        font-size: 16px
        color: blue
        margin-top: 10px

    &__author
        padding-top: 15px
        border-top: 1px solid blue
        clearfix()
        
        &-head
            margin-bottom: 20px

        &-name
            margin: 8px 0 7px
            font-size: 16px
            line-height: 22px

            span
                display: block
                font-size: 18px

        &-body
            position: relative
            min-height: 130px
            margin-bottom: 80px
            font-size: 14px
            line-height: 16px

        &-img
            position: absolute
            top: 30px
            left: 0
            
        &-descr
            padding-left: 110px

        &-link
            display: block
            margin-top: 10px
            