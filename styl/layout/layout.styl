/* ==========================================================================
    layout
========================================================================== */

k = 100/1200

.l-wrapper,
.l-footer
    width: (k*1160)%
    max-width: 1160px
    min-width: 1024px
    margin: 0 auto

//HEADER
.l-header
    position: relative
    overflow: hidden
    height: 250px

.l-header-col-1,
.l-header-col-2,
.l-header-col-3
    float: left

.l-header-col-2,
.l-header-col-3,
.l-header-col-4
    margin-top: 40px

.l-header-col-1
    width: k*305%

.l-header-col-2
    width: k*270%

.l-header-col-3
    width: k*320%

.l-header-col-4
    float: right
    width: 270px

@media (max-width:1100px)
    .l-header-col-1
        width: k*320%

    .l-header-col-2
        width: k*240%

    .l-header-col-3
        width: k*240%

//FOOTER
.l-footer
    overflow: hidden
    height: 260px
    padding: 35px 0
    border-top: 1px solid #003b7c
    margin-top: 70px

.l-footer-col-1,
.l-footer-col-2,
.l-footer-col-3
    float: left

.l-footer-col-1
    width: k*342%

.l-footer-col-2
    width: k*285%

.l-footer-col-3
    width: k*337%

.l-footer-col-4
    float: right
    width: k*200%

//CONTENT
.l-container
.l-wide
    clear: both
    clearfix()

.l-sidebar
    &_left
        float: left

    &_right
        float: right  

//all pages
.l-container
    .l-sidebar
        &_right
            width: k* 408%
    .l-content
        float: left
        width:k*710%

//HOMEPAGE
.l-container_homepage
    padding-top: 10px

    .l-wide
        padding-top: 50px
    
    .l-sidebar
        &_left
            width: k*240%
            
    .l-content
        float: right
        width: k* 860%

home-content-col-k = 100/862

.l-home-content-col-1
    float: left
    width: home-content-col-k*410%

.l-home-content-col-2
    float: right
    width: home-content-col-k*406%

.l-homepage-bottom-section
    clearfix()

.l-homepage-bottom-banner
    width: k*755%
    float: left

.l-homepage-facebook
    float: right
    width: k*350%

    img
        width: 100%
        height: 300px